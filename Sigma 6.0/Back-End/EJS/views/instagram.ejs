<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Photogram</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <nav class="navbar navbar-light bg-white border-bottom">
        <div class="container">
            <a class="navbar-brand">Photogram</a>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4 text-center">
                <div class="bg-white p-3 rounded shadow-sm">
                    <img src="<%= data.profilePic || 'default-avatar.png' %>" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    <h4>@<%= data.name%></h4>
                    
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary">
                            Follow
                        </button>
                        <button class="btn btn-outline-primary">
                            Message
                        </button>
                    </div>

                    <div class="d-flex justify-content-around mt-3">
                        <div>
                            <h6>Followers</h6>
                            <strong><%= data.followers %></strong>
                        </div>
                        <div>
                            <h6>Following</h6>
                            <strong><%= data.following %></strong>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="bg-white p-3 rounded shadow-sm">
                    <h5>Posts</h5>
                    
                    <% if (data.posts && data.posts.length > 0) { %>
                        <div class="row g-3">
                            <% for (let post of data.posts) { %>
                                <div class="col-md-6">
                                    <div class="card">
                                        <img src="<%= post.image %>" class="card-img-top" alt="Post" style="height: 300px; object-fit: cover;">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between">
                                                <div>
                                                    <i class="bi bi-heart"></i> <%= post.likes %>
                                                </div>
                                                <div>
                                                    <i class="bi bi-chat"></i> <%= post.comments %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    <% } else { %>
                        <p class="text-center text-muted">No posts yet!</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</body>

</html>
